@{
    ViewData["Title"] = "Dashboard";
}

<!-- Include ApexCharts JS -->
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<div class="container col-xxl-12 px-4 py-5 dashboard">
    <div class="row">
        <!-- Sidebar -->
        @await Html.PartialAsync("_DashboardLayout")

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h5 class="fw-bold mb-3 mb-md-0">Dashboard</h5>
                <div class="input-group" style="width: 300px;">
                    <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-search">
                    <button class="btn btn-dark" type="button" id="button-search"><i class='bx bx-search-alt'></i></button>
                </div>
            </div>

            <!-- Charts Section -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- Chart 1: Product Status -->
                        <div class="col-lg-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-header mb-0 text-center">
                                        Product by Category
                                    </h6>
                                    <div class="align-items-center">
                                        <div id="ChartMaster1"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Chart 2: User by Role -->
                        <div class="col-lg-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-header mb-0 text-center">
                                        Product by Status
                                    </h6>
                                    <div class="align-items-center">
                                        <div id="ChartMaster2"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
</div>
<script>
    // APEX CHART 1: Line Chart for products
    var options1 = {
        chart: {
            type: 'line',
            height: 250,
            width: '100%'
        },
        series: JSON.parse('@Html.Raw(ViewBag.SeriesData)')
    };

    var chart1 = new ApexCharts(document.querySelector("#ChartMaster1"), options1);
    chart1.render();

    // APEX CHART 2: Line Chart for user roles
    var options2 = {
        chart: {
            type: 'line',
            height: 250,
            width: '100%'
        },
        series: JSON.parse('@Html.Raw(ViewBag.SeriesData2)')
    };

    var chart2 = new ApexCharts(document.querySelector("#ChartMaster2"), options2);
    chart2.render();

</script>

